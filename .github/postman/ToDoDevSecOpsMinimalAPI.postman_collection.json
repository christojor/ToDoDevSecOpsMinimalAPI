{
  "info": {
    "name": "ToDoDevSecOpsMinimalAPI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"walk dog\",\n  \"isComplete\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/todoitems",
          "host": ["{{baseUrl}}"],
          "path": ["todoitems"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Create: status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Create: response has id and name', function () {",
              "    pm.expect(json).to.have.property('id');",
              "    pm.expect(json).to.have.property('name', 'walk dog');",
              "});",
              "// save created id for subsequent requests",
              "pm.environment.set('createdId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/todoitems",
          "host": ["{{baseUrl}}"],
          "path": ["todoitems"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('GetAll: status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('GetAll: response is an array', function () {",
              "    pm.expect(json).to.be.an('array');",
              "});",
              "pm.test('GetAll: contains created item', function () {",
              "    const exists = json.some(i => i.name === 'walk dog');",
              "    pm.expect(exists).to.be.true;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Todo By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/todoitems/{{createdId}}",
          "host": ["{{baseUrl}}"],
          "path": ["todoitems", "{{createdId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('GetById: status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('GetById: response has expected id', function () {",
              "    pm.expect(json).to.have.property('id');",
              "    pm.expect(json.id).to.eql(parseInt(pm.environment.get('createdId')));",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"id\": {{createdId}},\n  \"name\": \"feed fish\",\n  \"isComplete\": false\n}" },
        "url": { "raw": "{{baseUrl}}/todoitems/{{createdId}}", "host": ["{{baseUrl}}"], "path": ["todoitems", "{{createdId}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Update: status code is 204', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/todoitems/{{createdId}}", "host": ["{{baseUrl}}"], "path": ["todoitems", "{{createdId}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Delete: status code is 204', function () {",
              "    pm.response.to.have.status(204);",
              "});",
              "// cleanup environment variable",
              "pm.environment.unset('createdId');"
            ]
          }
        }
      ]
    },
